{
  "$schema": "http://json-schema.org/schema#", 
  "required": [
    "serviceName", 
    "servicePort"
  ], 
  "type": "object", 
  "description": "IngressBackend describes all endpoints for a given service and port.", 
  "properties": {
    "serviceName": {
      "type": [
        "string", 
        "null"
      ], 
      "description": "Specifies the name of the referenced service."
    }, 
    "servicePort": {
      "oneOf": [
        {
          "type": "string"
        }, 
        {
          "type": "integer"
        }
      ]
    }
  }
}